<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.QuizActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/quizStepView"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:text="What icon indicates battery low?"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.mozilla.hackathon.kiboko.widgets.DSORadioGroup
            android:id="@+id/quizGroup"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout
                android:id="@+id/optionA"
                app:type="radio"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/checkable_image_selector"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="15dp"
                android:text="A">
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/answera"
                    android:src="@drawable/ic_bluetooth_connected_white_48dp"
                    android:layout_width="58dp"
                    android:layout_height="58dp" />
            </com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout>
            <com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/optionA"
                android:layout_alignParentTop="true"
                android:id="@+id/optionB"
                android:background="@drawable/checkable_image_selector"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B">
                <ImageView
                    android:id="@+id/answerb"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_phone_white_48dp"
                    android:layout_width="58dp"
                    android:layout_height="58dp" />
            </com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout>
            <com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout
                android:layout_margin="5dp"
                android:layout_below="@+id/optionA"
                android:layout_alignLeft="@+id/optionA"
                android:id="@+id/optionC"
                android:background="@drawable/checkable_image_selector"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C">
                <ImageView
                    android:id="@+id/answerc"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_event_white_48dp"
                    android:layout_width="58dp"
                    android:layout_height="58dp" />
            </com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout>
            <com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout
                android:layout_margin="5dp"
                android:padding="15dp"
                android:layout_below="@+id/optionB"
                android:layout_toRightOf="@+id/optionC"
                android:background="@drawable/checkable_image_selector"
                android:layout_alignLeft="@+id/optionB"
                android:id="@+id/optionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D">
                <ImageView
                    android:id="@+id/answerd"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_battery_20_white_48dp"
                    android:layout_width="58dp"
                    android:layout_height="58dp"/>
            </com.mozilla.hackathon.kiboko.widgets.CheckableLinearLayout>
        </com.mozilla.hackathon.kiboko.widgets.DSORadioGroup>
    </LinearLayout>
</RelativeLayout>
