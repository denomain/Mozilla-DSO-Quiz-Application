<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/DSOActionBar</item>
    </style>

    <style name="DSOActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/DSOActionBarTitle</item>
    </style>

    <style name="DSOActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
